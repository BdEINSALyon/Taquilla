      </a>
    </div>
    <div class="nav navbar-nav navbar-right" id="login-buttons">
      <% if current_user.nil? %>
          <a href="<%= new_user_registration_path %>" class="btn btn-sm btn-default"><%= t('registration') %></a>
          <a href="<%= new_user_session_path %>" class="btn btn-sm btn-primary"><%= t('login') %></a>
      <% else %>
          <%= link_to 'DÃ©connexion', destroy_user_session_path, method: :delete, class: 'btn btn-sm btn-primary' %>
