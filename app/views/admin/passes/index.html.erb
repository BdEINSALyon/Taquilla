<h1><%= link_to admin_event_path(@event), class: 'btn btn-default' do %><i class="fa fa-arrow-left"></i> Retour<%end%> Billets pour <%= @event.name %></h1>
<table class="table table-bordered table-stripped">
  <tr>
    <th>Nom</th>
    <th></th>
  </tr>
  <% @passes.each do |pass| %>
    <tr>
      <td><%= link_to pass.name, edit_admin_event_pass_path(@event, pass) %></td>
      <td><%= link_to admin_event_pass_path(@event, pass), method: :delete, data: {confirm: 'Vous allez supprimer un évènement ! Voulez-vous continuer ?'}, class: 'text-danger' do %><i class="fa fa-trash"></i><% end %></td>
    </tr>
  <% end %>
</table>

<div>
  <%= link_to 'Ajouter un billet', new_admin_event_pass_path(@event), class: 'btn btn-block btn-success' %>
</div>
